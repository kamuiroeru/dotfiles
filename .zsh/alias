# tarとpigz
function tpigz() {
    command \tar -cf $1.tar.gz --use-compress-prog=pigz $2
}

# no ft で vimを開く
function vimn() {
    command nvim -c 'noau e $1'
}

# colorsで使える色を表示
alias color='for c in {000..255}; do echo -n "\e[38;5;${c}m $c" ; [ $(($c%16)) -eq 15 ] && echo;done;echo'

